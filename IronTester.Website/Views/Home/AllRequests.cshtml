@{
    ViewBag.Title = "All requests";
    ViewBag.AllRequestsMenuClass = "active";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">All requests</h1>
        <div class="panel panel-default">
            <div class="panel-heading">
                All IronTester Requests
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table ng-controller="allRequestsController" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>RequestId</th>
                                <th>Status</th>
                                <th>Progress</th>
                                <th>Failure?</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="request in requests track by request.requestId" ng-class="{info: request.requestClass}">
                                <td>{{$index + 1}}</td>
                                <td>{{request.requestId}}</td>
                                <td>{{request.requestState}}</td>
                                <td>
                                    <div class="progress progress-striped active">
                                        <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="{{request.requestProgress}}" aria-valuemin="0" aria-valuemax="100" style="width:{{request.requestProgress}}%">
                                            <span class="sr-only">{{request.requestProgress}}% (success)</span>
                                        </div>
                                    </div>
                                </td>
                                <td>{{request.requestFailureReason}}</td>
                                <td>
                                    <button type="button" class="btn btn-default btn-circle" ng-click="pleaseCancel(request.requestId);">
                                        <i class="fa fa-times"></i>
                                    </button>
                                    <button type="button" class="btn btn-default btn-circle" ng-click="pleaseRestart(request.requestId);">
                                        <i class="fa fa-undo"></i>
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>