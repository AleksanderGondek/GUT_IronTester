@{
    ViewBag.Title = "Home Page";
    ViewBag.AllRequestsMenuClass = "active";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">All requests</h1>
        <div ng-controller="allRequestsController">
            <p ng-repeat="request in requests">
                {{request.requestId}} - 
                {{request.requestState}} - 
                {{request.requestProgress}} - 
                {{request.requestFailureReason}} 
            </p>
        </div>
    </div>
</div>